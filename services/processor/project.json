{
  "name": "processor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "services/processor",
  "projectType": "application",
  "tags": ["type:service", "scope:backend"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd services/processor && docker build -t aries-processor:latest ."
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd services/processor && python main_processor.py"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd services/processor && black --check *.py && isort --check-only *.py && flake8 *.py"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd services/processor && mkdir -p build && cd build && cmake .. && make -j$(nproc)"
      }
    }
  }
}