{
  "name": "aries-edge-platform",
  "version": "1.0.0",
  "description": "Aries-Edge Intelligent Video Analytics Platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "services:api": "cd services/api && npm run dev",
    "services:frontend": "cd services/frontend && npm run dev",
    "services:processor": "cd services/processor && python main_processor.py",
    "ci:build": "npm run build && npm run test",
    "ci:deploy": "npm run docker:build && npm run docker:up"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aries-edge/platform.git"
  },
  "keywords": [
    "video-analytics",
    "ai",
    "computer-vision",
    "deepstream",
    "yolo",
    "real-time",
    "surveillance"
  ],
  "author": "Aries-Edge Team",
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{py}": [
      "black",
      "isort"
    ]
  }
}