# Environment Configuration for Aries Edge Platform

# Database Configuration
DATABASE_URL=postgresql+asyncpg://aries:password@aries-db:5432/aries

# Pulsar/Kafka Message Broker
PULSAR_URL=pulsar://aries-broker:6650
KAFKA_BOOTSTRAP_SERVERS=aries-broker:9092

# JWT Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_KEY_HEADER_NAME=X-API-Key
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# HLS Stream Configuration
HLS_OUTPUT_DIR=/opt/aries/streams
HLS_PLAYLIST_LENGTH=4
HLS_TARGET_DURATION=2
HLS_MAX_FILES=10

# Model Configuration
MODEL_CONFIG_DIR=/opt/nvidia/deepstream/deepstream/configs
MODEL_WEIGHTS_DIR=/opt/nvidia/deepstream/deepstream/models

# DeepStream Configuration
DEEPSTREAM_VERSION=8.0
TENSORRT_PRECISION=FP16
BATCH_SIZE=1
GPU_ID=0

# Performance Configuration
RATE_LIMIT_PER_MINUTE=100
WORKSPACE_SIZE=1024
MAX_DETECTIONS=100
CONFIDENCE_THRESHOLD=0.5
NMS_THRESHOLD=0.4

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Development Configuration
DEBUG=false
SQL_ECHO=false
RELOAD_ON_CHANGE=false